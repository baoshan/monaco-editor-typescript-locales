{
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "upgrade": "yarn upgrade-interactive",
    "upgrade-latest": "yarn upgrade-interactive --latest",
    "lint": "eslint --report-unused-disable-directives --ignore-path .gitignore --quiet --ext .jsx,.js,.ts,.tsx --cache --fix .",
    "check-types": "tsc --noEmit",
    "check": "concurrently --timings --prefix-colors auto --kill-others-on-fail \"yarn check-types\" \"yarn lint\""
  },
  "resolutions": {
    "eslint-plugin-react-hooks": "^4.6.0"
  },
  "resolutionsNotes": {
    "eslint-plugin-react-hooks": "To avoid issues with eslint not finding the right version as next js configs also define this with different versions sometimes"
  },
  "devDependencies": {
    "@eliasm307/config": "^0.40.0",
    "@types/node": "^18.18.6",
    "@types/react": "^18.2.31",
    "@types/react-dom": "^18.2.14",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.52.0",
    "eslint-config-next": "13.5.6",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  }
}
